<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Plan"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Active Plan Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_active_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_plan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_plan_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strength â€¢ Intermediate"
                    android:textColor="#94A3B8"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#334155"
                    android:layout_marginVertical="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DURATION"
                            android:textColor="#94A3B8"
                            android:textSize="10sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_plan_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 Weeks"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROGRESS"
                            android:textColor="#94A3B8"
                            android:textSize="10sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_plan_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Week 1"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_plan_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    android:progress="10"
                    android:progressTint="#34D399"
                    android:progressBackgroundTint="#334155"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCHEDULE"
                    android:textColor="#94A3B8"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/tv_plan_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon, Wed, Fri"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- No Plan / Create Plan Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_no_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/bar_gradient_no_plan"
                    android:layout_width="12dp"
                    android:layout_height="0dp"
                    android:background="@drawable/workout_card_gradient"
                    android:backgroundTint="#34D399" 
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    app:layout_constraintStart_toEndOf="@id/bar_gradient_no_plan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Your Journey"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to create a personalized plan"
                        android:textColor="#94A3B8"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="20dp"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="#34D399"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_plan"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="48dp"
            android:text="End Current Plan"
            android:textColor="#EF4444"
            app:strokeColor="#EF4444"
            app:strokeWidth="1dp"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/loading_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
