<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <!-- Top Header Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_image_container"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#6D28D9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tv_profile_initial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="E"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Modern Week Selector (Centered Pill) -->
        <LinearLayout
            android:id="@+id/ll_week_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_week_selector_pill"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:progress="75"
                app:indicatorSize="16dp"
                app:trackThickness="2dp"
                app:indicatorColor="#10B981"
                app:trackColor="#334155"/>
            
            <TextView
                android:id="@+id/tv_week_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week 1/4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
                
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="#94A3B8"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Calendar Strip -->
    <LinearLayout
        android:id="@+id/calendar_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        android:paddingHorizontal="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar">
        
        <include layout="@layout/item_calendar_day_v2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <include layout="@layout/item_calendar_day_v2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <include layout="@layout/item_calendar_day_v2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <include layout="@layout/item_calendar_day_v2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <include layout="@layout/item_calendar_day_v2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <include layout="@layout/item_calendar_day_v2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <include layout="@layout/item_calendar_day_v2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>

    </LinearLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_strip"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title and Weather Row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/tv_section_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's workouts"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <!-- Active Workout Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/workout_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/bar_gradient"
                        android:layout_width="12dp"
                        android:layout_height="0dp"
                        android:background="@drawable/workout_card_gradient"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintStart_toEndOf="@id/bar_gradient"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_workout_date_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monday, Jan 26 · 45m"
                            android:textColor="#94A3B8"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_workout_title_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upper Body Blast"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tv_workout_subtitle_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Strength · 4 exercises"
                            android:textColor="#94A3B8"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_complete_workout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        android:src="@android:drawable/checkbox_off_background"
                        app:tint="#334155"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Create Plan / Rest Day Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rest_day_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/bar_gradient_rest"
                        android:layout_width="12dp"
                        android:layout_height="0dp"
                        android:background="@drawable/workout_card_gradient"
                        android:backgroundTint="#34D399" 
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        app:layout_constraintStart_toEndOf="@id/bar_gradient_rest"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_main_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Your Journey"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to create a personalized plan"
                            android:textColor="#94A3B8"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>
                    
                    <ImageView
                        android:id="@+id/btn_add_plan_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="20dp"
                        android:src="@android:drawable/ic_input_add"
                        app:tint="#34D399"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Week Overview Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:strokeColor="#334155"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Week Overview"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_media_play"
                            app:tint="@color/white"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">
                        <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="1" android:background="#334155" android:layout_marginEnd="4dp"/>
                        <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="1" android:background="#334155" android:layout_marginEnd="4dp"/>
                        <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="1" android:background="#334155" android:layout_marginEnd="4dp"/>
                        <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="1" android:background="#334155"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Workouts: 0/4"
                            android:textSize="12sp"
                            android:textColor="#94A3B8"/>
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#334155"
                android:layout_marginVertical="24dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My insights"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPAND >"
                    android:textColor="#94A3B8"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Insight cards placeholder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="0dp"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="0dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
